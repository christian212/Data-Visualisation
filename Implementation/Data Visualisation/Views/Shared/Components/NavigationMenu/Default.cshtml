@model IEnumerable<string>

<div class="row">
    <div class="list-group">
        <a class="list-group-item list-group-item-action" asp-action="List" asp-controller="Record" asp-route-category="" asp-route-page="1">
            <span class="badge">@ViewBag.Count</span> Alle Datens√§tze
        </a>
        
        @{int index = 0;}
        @foreach (string category in Model) {
            <a class="list-group-item list-group-item-action @(category == ViewBag.SelectedCategory ? "active": "")"
                asp-controller="Record" asp-action="List"
                asp-route-category="@category" asp-route-page="1">
                <span class="badge">@ViewBag.Badges[index]</span> @category
            </a>
            index++;
        }
    </div>
</div>