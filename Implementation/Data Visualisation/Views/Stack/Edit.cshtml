@model Stack

@{
    ViewData["Title"] = $"Edit Stack {Model.StackID}";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="StackID" />
    <input type="hidden" asp-for="Creation" />
    <div class="row">
        <div class="col-sm-10">
            <div class="form-group row">
                <label asp-for="StackID" class="col-sm-2 col-form-label">Stack ID</label>
                <div class="col-sm-10">
                    <div><span asp-validation-for="StackID" class="text-danger"></span></div>
                    <input asp-for="StackID" class="form-control" placeholder="StackID" readonly>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <div><span asp-validation-for="Name" class="text-danger"></span></div>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Category" class="col-sm-2 col-form-label">Kategorie</label>
                <div class="col-sm-10">
                    <div><span asp-validation-for="Category" class="text-danger"></span></div>
                    <input asp-for="Category" class="form-control" placeholder="Kategorie">
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label">Beschreibung</label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Description" rows="8" placeholder="Beschreibung"></textarea>
                    <p class="form-text text-muted">
                        <small><i class="fa fa-info" aria-hidden="true"></i> Das Beschreibungs-Textfeld unterstützt Markdown Befehle.</small>
                    </p>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Schaltungsart</label>
                <div class="col-sm-10">
                    <fieldset class="form-group">
                        <legend></legend>

                        <div class="form-check">
                            <label class="form-check-label">
                                <input asp-for="CircuitType" type="radio" class="form-check-input" value="Sonstige" checked>
                                Sonstige
                            </label>
                        </div>

                        <div class="form-check">
                            <label class="form-check-label">
                                <input asp-for="CircuitType" type="radio" class="form-check-input" value="Reihenschaltung">
                                Reihenschaltung
                            </label>
                        </div>

                        <div class="form-check">
                            <label class="form-check-label">
                                <input asp-for="CircuitType" type="radio" class="form-check-input" value="Parallelschaltung">
                                Parallelschaltung
                            </label>
                        </div>
                    </fieldset>
                </div>
            </div>

            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <button class="btn btn-primary" type="submit">Speichern</button>
                    <a asp-action="List" class="btn btn-link" role="button">Abbrechen</a>
                </div>
            </div>
        </div>
    </div>
</form>